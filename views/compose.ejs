<%- include("partials/header") -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="titleInput">Title</label>
    <input type="text" class="form-control" id="titleInput" name="postTitle">
  </div>
  <div class="form-group">
    <label for="postInput">Post</label>
    <textarea class="form-control" id="postInput" name="postBody" rows="5"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="publish">Publish</button>
</form>

<%- include("partials/footer") -%>
