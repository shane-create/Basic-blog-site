<%- include("partials/header") -%>

<h1>Home</h1>
<p><%=home%></p>

<% posts.forEach(function(post){%>
<h1><%=post.title %></h1>
<p>
  <%if(post.body.length > 250){%>
  <%=post.body.substring(0, 250) + " ..."%>
  <a href="/post/<%=post.title%>">Read More</a>
  <%} else{%>
  <%=post.body%>
  <%};%>
</p>
<% }); %>

<%- include("partials/footer")-%>
